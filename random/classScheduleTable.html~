function main()
  {
   var elt = document.getElementById("addForm");      
   var one = elt.start.value;
   if (elt.courseName.value == ""){alert("Enter a Course abbreviation");return;}
   if (elt.fullCourseName.value == ""){alert("Enter a Full Course Name");return;}
   if (elt.room.value == ""){alert("Select a room");return;}	   
   var two = elt.finish.value;

  var idx = "a".concat(elt.numClasses.value).concat(",").concat("0");
  if (elt.numClasses.value > 0){
	  var idx = "a".concat(((parseFloat(elt.numClasses.value)-1).toString())).concat(",").concat("0");
	  if (document.getElementById(idx).innerHTML == elt.courseName.value){return;}}
  var daysSelected = "";
  
  if (document.getElementById("d1").checked) {daysSelected = daysSelected.concat("Su,");} 
  if (document.getElementById('d2').checked) {daysSelected = daysSelected.concat("M,");}
  if (document.getElementById('d3').checked) {daysSelected = daysSelected.concat("Tu,");} 
  if (document.getElementById('d4').checked) {daysSelected = daysSelected.concat("W,");}
  if (document.getElementById('d5').checked) {daysSelected = daysSelected.concat("Th,");}
  if (document.getElementById('d6').checked) {daysSelected = daysSelected.concat("F,");}
  if (document.getElementById('d7').checked) {daysSelected = daysSelected.concat("Sa,");} 
  if (daysSelected.length == 0){alert("Select day(s)");return;}
  daysSelected = daysSelected.substring(0, daysSelected.length-1);
  

     if (elt.start.value.indexOf(":") == -1 || elt.finish.value.indexOf(":") == -1 || elt.start.value.indexOf("m") == -1 || elt.finish.value.indexOf("m") == -1	){ alert("Invalid start or finish time.");return;}
 var numClasses = parseFloat(elt.numClasses.value);
  var idx = "a".concat(elt.numClasses.value).concat(",").concat("0");
  document.getElementById(idx).innerHTML = elt.courseName.value;
  var idx = "a".concat(elt.numClasses.value).concat(",").concat("1");
document.getElementById(idx).innerHTML = daysSelected.concat(" ").concat(elt.start.value.concat("-")).concat(elt.finish.value).concat(" ").concat(elt.room.value);
  var idx = "a".concat(elt.numClasses.value).concat(",").concat("2");
  
  document.getElementById(idx).innerHTML = elt.fullCourseName.value;
  
   document.getElementById("a".concat((elt.numClasses.value).toString())).style.display = ''; 
  var numClasses = parseFloat(elt.numClasses.value);
  numClasses++;
  elt.numClasses.value = numClasses;
 
  }
