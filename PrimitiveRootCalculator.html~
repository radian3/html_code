<script type = "text/javascript">

	
  function GCD(x, y)
  {
    
   if (x > y){
    var a = x;
    var b = y;
   }
   else{
   var a = y;
   var b = x; 
   }  
   var q = Math.floor(a/b);
   var r = a%b;
   while (r!=0){
   var a = b;
   var b = r;
   var q = Math.floor(a/b);
   var r = a%b; 
   }
   return b;
  }



  function Phi(inp)
  {

 
   
   if (inp == 1){
	   return 1;}
 
   var numSols = 0;
   for (var i = 1; i<inp; i++){
     if (GCD(i, inp) == 1){
     numSols += 1;}}
   return numSols;
    
  
  }


  document.getElementById("addForm").addBtn.onclick = addTwo;
  function addTwo()
  {

   var sum = "";
   var elt = document.getElementById("addForm");      
   var modulus = parseFloat (elt.one.value);
 
 
   var primitiveRootList = new Array();
   var order_candidates = new Array();

   
   var phiOfModulus = Phi(modulus);
   for (var exponent = 1; exponent <= Phi(phiOfModulus); exponent++){
    if (phiOfModulus%exponent == 0){
     order_candidates.push(exponent);}}


//   
   for (var base = 1; base <= modulus; base++){
    if (GCD(base, modulus)!=1){
	    continue;}
    
    for (var i = 0; i < order_candidates.length; i++){
     
     var exponent = order_candidates[i];
     var value = Math.pow(base, exponent);
     if (value%modulus == 1){
      var order = exponent;
      break;}}
    if (order == phiOfModulus){
	    primitiveRootList.push(base);}}

   alert();
   elt.sum.value = Phi(modulus); 		



  }
</script>


